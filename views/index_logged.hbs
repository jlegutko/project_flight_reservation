                {{/if}}
            </ul>
        </nav>

        <!--MAIN PART OF HOME PAGE-->

        <article class="main_content">
            <div class="wrapper">
            </div>
        
            <div class="section">
                <div class="section_title">
                    Looking for a flight?
                </div>
                <div class="card">
                    <form method="POST" action="/reservation" class="grid_block search_form"
                        enctype="application/x-www-form-urlencoded">
                        <span class="item_header search_header"><i class="fas fa-city"></i>FROM:<span
                                class="search_city">CRACOW</span></span>
                        <label for="flight_type" class="item_label search_label">To: </label>
                        <select id="flight_type" name="flightDestination" class="item_input">
                            <option value="local">Warsaw</option>
                            <option value="continental">Lisbon</option>
                            <option value="intercontinental">New York</option>
                        </select>
                        <label for="flightDate" class="item_label search_label">Date:</label>
                        <input type="date" name="flightDate" id="flightDate" class="item_input">
                        <input type="submit" value="Search" class="search_btn item_header">
                    </form>
                    <div class="info_aside">
        
                    </div>
                    <div class="footer_info">
                        <p><i class="fas fa-info-circle"></i> You must firstly <a href="#">log in</a> to have the possibility to reserve the flight.</p>
                    </div>
                </div>
            </div>
        
            <!--SEARCH THE FLIGHTS SECTION-->
        
        </article>

