        {{!-- MAIN NAVIGATION --}}
        <nav class="main_navigation">
            <div class="logo_img">
                <i class="fa fa-plane logo_img" aria-hidden="true"></i>
                <span>FREELY</span>
            </div>
            <ul class="navigation">
                {{#if user}}
                    <li class="navigation_element"><a href="/users/logout" id="register_btn" class="nav_link"><i class="fas fa-user"></i>Logout</li></a>
                {{else}}
                    <li class="navigation_element"><a href="/users/register" id="register_btn" class="nav_link"><i class="fas fa-user"></i>Register</li></a>
